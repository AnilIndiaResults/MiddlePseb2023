    <script src="~/Scripts/jquery.dataTables.min.js"></script>*@

<style type="text/css">
    select[multiple] {
        height: 240px
    }

    textarea {
        resize: none;
        height: 130px
    }

    .bvc li {
        padding-right: 1px;
    }

    .bvc .checkboxP {
        padding-left: 1px;
    }

    .newList li {
        padding: 0 15px !important;
    }

        .newList li .checkboxP {
            margin-right: 2px;
